{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "file",
      "filename": "logs/access.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "category": "http"
    },
    {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "category": "app"
    },
    {
      "type": "file",
      "filename": "logs/client.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "category": "client"
    },
    {
      "type": "file",
      "filename": "logs/tools.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "category": "tools"
    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "logs/errors.log"
      }
    }
  ],
  "replaceConsole": true
}

